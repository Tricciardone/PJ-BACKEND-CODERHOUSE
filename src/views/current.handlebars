    <!-- Carga de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Perfil de Usuario</h2>
            </div>
            <div class="card-body">
                <p><strong>Nombre:</strong> {{user.first_name}}</p>
                <p><strong>Apellido:</strong> {{user.last_name}}</p>
                <p><strong>Email:</strong> {{user.email}}</p>
                <p><strong>Edad:</strong> {{user.age}}</p>
                <p><strong>Nivel:</strong> {{user.role}}</p>

                <a href="/api/products" class="btn btn-primary">Ver Productos</a>
                <!-- Mostrar el botón "Administrar Usuarios" solo si el usuario es admin -->
                {{#if (eq user.role 'admin')}}
                    <a href="/adminUsers" class="btn btn-success">Administrar Usuarios</a>
                {{/if}}
                <form action="/logout" method="POST">
                    <button type="submit" class="btn btn-danger mt-2">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const userEmail = "{{user.email}}";
            if (userEmail === "adminCoder@coder.com") {
                Swal.fire({
                    icon: 'success',
                    title: '¡Bienvenido Administrador!',
                    text: 'Has iniciado sesión correctamente.',
                });
            }
        });
    </script>

